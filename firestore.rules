
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Rules for user profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Rules for game documents
    match /games/{gameId} {
      // Any signed-in user can read game data
      allow read: if isSignedIn();
      // Only players in the game can write to it
      allow write: if isSignedIn() && request.auth.uid in resource.data.playerIds;
    }
    
    match /card-images/{cardId} {
        allow read, write: if isSignedIn();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Files can be read by any authenticated user.
    // Writes are only allowed from the Admin panel.
    match /card-images/{allPaths=**} {
      allow get: if request.auth != null;
    }
    match /music/{fileName} {
      allow get: if request.auth != null;
    }
  }
}
